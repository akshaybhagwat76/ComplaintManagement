@using ComplaintManagement.Helpers
@{
    var user = ""; var userImage = string.Empty;
    int userId = 0;
    var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
    ViewBag.Title = "Categories";
    ViewBag.heading = "Masters";

    if (claimsIdentity != null)
    {
        var c = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.Name);
        var cI = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.UserData);
        var userIDInfo = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.Sid);

        if (c != null && cI != null && userIDInfo != null)
        {

            user = c.Value.ToString();
            userImage = cI.Value.ToString();
            userId = Convert.ToInt32(userIDInfo.Value.ToString());
        }
    }
}


<!-- End of Topbar -->
<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="preloader"></div>
    <div class="page-title">
        <h2 class="text-black">Category Master</h2>
    </div>
    <div class="card mb-4 rounded-0 border-0">
        <div class="card-body">
            <div class="row justify-content-between">
                <div class="col-md-8">
                    <ul class="nav">
                        <li class="nav-item mr-3">
                            <input type="date" id="fromDate" value="@ViewBag.startDate" class="form-control" placeholder="From Date" />
                        </li>
                        <li class="nav-item mr-3">
                            <input type="date" id="toDate" value="@ViewBag.toDate" class="form-control" placeholder="To Date" />
                        </li>
                        <li class="nav-item">
                            <button type="button" onclick="filterGrid()" class="btn btn-danger rounded-circle h-40p w-40p" data-toggle="tooltip" data-placement="top" title="Search"><i class="fas fa-search"></i></button>
                        </li>
                        <li class="nav-item">
                            &nbsp; <button type="button" class="btn btn-danger rounded-circle h-40p w-40p" onclick="location.href='@Url.Action("ExportData", "Category")'" data-toggle="tooltip" data-placement="top" title="Excel"><i class="fas fa-file-excel"></i></button>
                        </li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <ul class="nav">
                        <li class="nav-item mr-4">
                            <a href="/Category/Create" class="btn rounded-circle h-40p w-40p btn-outline-danger d-flex align-items-center" data-toggle="tooltip" data-placement="top" title="Create"><i class="fas fa-plus"></i></a>
                        </li>
                        <li class="nav-item">
                            <button type="submit" class="btn btn-outline-danger rounded-circle h-40p w-40p" data-toggle="modal" data-target="#uploadFile" data-placement="top" title="Upload"><i class="fas fa-upload"></i></button>
                        </li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
    <!-- Tab Bar -->
    <div class="user-list">
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card mb-4 rounded-0 border-0">

                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="table-responsive">
                            @*class="table f-14"*@
                            <table class="table f-14" width="100%" id="myTable">
                                <thead>
                                    <tr>
                                        <td class="text-center">Category</td>
                                        <td class="text-center">Created Date</td>

                                        <td class="text-center">Created By</td>
                                        <td class="text-center">Modified Date</td>
                                        <td class="text-center">Modified By</td>
                                        <td class="text-center">Status</td>
                                        <td class="text-center">Action</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in ViewBag.lstCategories)
                                    {
                                        <tr>
                                            <td class="text-black text-center"><strong>@item.CategoryName</strong></td>
                                            <td class="text-black text-center"><strong>@item.CreatedDate.ToString("dd/MM/yyyy").Replace("-", "/")</strong></td>
                                            <td class="text-black text-center"><strong>@item.CreatedByName</strong></td>
                                            <td class="text-black text-center">
                                                <strong>
                                                    @if (item.UpdatedDate != null)
                                                    {
                                                        @Html.Raw(item.UpdatedDate.ToString("dd/MM/yyyy").Replace("-", "/"))
                                                    }
                                                    else
                                                    {
                                                        @Html.Raw(Messages.NotAvailable.ToString())
                                                    }
                                                </strong>
                                            </td>
                                            <td class="text-black text-center"><strong>@item.UpdatedByName</strong></td>

                                            <td class="text-black text-center">
                                                <strong>
                                                    @if (item.Status == true)
                                                    {@Html.Raw(Messages.Active.ToString()) }
                                                else
                                                { @Html.Raw(Messages.Inactive.ToString())}
                                                </strong>
                                            </td>
                                            <td class="text-center">
                                                <a href="javascript:void(0)" onclick="performAction('@CryptoEngineUtils.Encrypt(Convert.ToString(item.Id),true)',false)" data-id="@item.Id" class="mr-2" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit text-danger"></i></a>
                                                <a href="javascript:void(0)" onclick="deleteCategory('@CryptoEngineUtils.Encrypt(Convert.ToString(item.Id),true)',false)" data-id="@item.Id" class="mr-2" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fas fa-trash-alt text-danger"></i></a>
                                                <a href="javascript:void(0)" onclick="performAction('@CryptoEngineUtils.Encrypt(Convert.ToString(item.Id),true)',true)" data-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Views"><i class="fas fa-clock text-danger"></i></a>
                                                <a href="/Category/HistoryIndex?id=@CryptoEngineUtils.Encrypt(Convert.ToString(item.Id),true)" data-toggle="tooltip" data-placement="top" title="History">&nbsp;<i class="fas fa-history text-danger"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <br />
                        <table class="float-right" id="paginator" cellpadding="0" cellspacing="0">
                            <tr>
                                @for (int i = 1; i <= ViewBag.PageCount; i++)
                                {
                                    <td>
                                        <div class="pagination">
                                            @if (i != ViewBag.CurrentPageIndex)
                                            {
                                                <a href="javascript:PagerClick(@i);">@i</a>
                                            }
                                            else
                                            {
                                                <span>@i</span>
                                            }
                                        </div>
                                    </td>
                                }
                            </tr>
                        </table>
                        <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<div class="modal" tabindex="-1" id="uploadFile">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 rounded-0">
            <span class="close-modal" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </span>
            <div class="modal-body">
                <label class="d-block file-upload mb-3">Upload File</label>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" onclick="this.value = null" class="custom-file-input" id="excelFile" data-ketan="" aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <a class="btn btn-danger btn-user btn-sm" id="btnUpload">Upload</a>
                        <a href="/Category/Index" class="btn bg-white border btn-user btn-sm">Cancel</a>
                    </div>
                    <a href="/Files/DownloadFile?filePath=/Imports/Samples/Category/Category.xlsx" class="ml-3 mt-n2">Download Sample</a>
                    <label id="lblError" class="ml-n5 mt-5 adderror"></label>
                </div>
            </div>
        </div>
    </div>
</div>


