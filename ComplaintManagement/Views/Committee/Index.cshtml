@using ComplaintManagement.Helpers
@using System
@using System.Globalization
@{
    var user = ""; var userImage = string.Empty;
    int userId = 0;
    var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;

    if (claimsIdentity != null)
    {
        var c = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.Name);
        var cI = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.UserData);
        var userIDInfo = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.Sid);

        if (c != null && cI != null && userIDInfo != null)
        {

            user = c.Value.ToString();
            userImage = cI.Value.ToString();
            userId = Convert.ToInt32(userIDInfo.Value.ToString());
        }
    }
    ViewBag.Title = "Committies";
    ViewBag.heading = "Masters";
    dynamic data = Json.Decode(ViewBag.lstCommittee);
}


        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="preloader"></div>
            <div class="page-title">
                <h2 class="text-black">Committee Master</h2>
            </div>
            <div class="card mb-4 rounded-0 border-0">
                <div class="card-body">
                    <div class="row justify-content-between">
                        <div class="col-md-8">
                            <ul class="nav">
                                <li class="nav-item mr-3">
                                    <input type="date" id="fromDate" value="@ViewBag.startDate" class="form-control" placeholder="From Date" />
                                </li>
                                <li class="nav-item mr-3">
                                    <input type="date" id="toDate" value="@ViewBag.toDate" class="form-control" placeholder="To Date" />
                                </li>
                                <li class="nav-item">
                                    <button type="button" onclick="filterGrid()" class="btn btn-danger rounded-circle h-40p w-40p"><i class="fas fa-search"></i></button>
                                </li>
                                <li class="nav-item">
                                    &nbsp; <button type="button" class="btn btn-danger rounded-circle h-40p w-40p" onclick="location.href='@Url.Action("ExportData", "Committee")'"><i class="fas fa-file-excel"></i></button>
                                </li>
                            </ul>
                        </div>
                          <div class="col-md-2">
                            @if (data.Length < 1)
                            {


                            <div class="col-md-2">
                                <ul class="nav">

                                    <li class="nav-item mr-4">
                                        <a href="/Committee/Create" class="btn rounded-circle h-40p w-40p btn-outline-danger d-flex align-items-center"><i class="fas fa-plus"></i></a>
                                    </li>
                                    <li class="nav-item">
                                        <button type="submit" class="btn btn-outline-danger rounded-circle h-40p w-40p" data-toggle="modal" data-target="#uploadFile"><i class="fas fa-upload"></i></button>
                                    </li>

                                    </ul>
                                    

                            
                            </div>

                            }
                            </div>
                        

                    </div>
                </div>
            </div>
            <!-- Tab Bar -->
            <div class="user-list">
                <div class="row">
                    <div class="col-xl-12 col-lg-12">
                        <div class="card mb-4 rounded-0 border-0">
                            <!-- Card Body -->
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table f-14" id="myTable">
                                        <thead>
                                            <tr>
                                                <td class="text-center">User Name</td>
                                                <td class="text-center">Committee</td>
                                                <td class="text-center">Created Date</td>
                                                <td class="text-center">Created By</td>
                                                <td class="text-center">Modified Date</td>
                                                <td class="text-center">Modified By</td>
                                                <td class="text-center">Status</td>
                                                <td class="text-center">Action</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in data)
                                            {
                                                <tr>
                                                    <td class="text-black text-center"><strong>@item.User</strong></td>
                                                    <td class="text-black text-center"><strong>@item.CommitteeName</strong></td>
                                                    <td class="text-black text-center">
                                                        <strong>
                                                            @if (item.CreatedDate != null)
                                                            {
                                                                var date = String.Format("{0}", item.CreatedDate.Substring(0, item.CreatedDate.IndexOf("T")).Replace("-", "/")).ToString();
                                                                @Html.Raw(DateTime
                                                            .ParseExact(date, "yyyy/MM/dd", CultureInfo.InvariantCulture)
                                                            .ToString("dd/MM/yyyy", CultureInfo.InvariantCulture));
                                                            }
                                                        </strong>
                                                    </td>
                                                    <td class="text-black text-center"><strong>@item.CreatedByName</strong></td>
                                                    <td class="text-black text-center">
                                                        <strong>
                                                            @if (item.UpdatedDate != null)
                                                            {
                                                                var date = String.Format("{0}", item.UpdatedDate.Substring(0, item.UpdatedDate.IndexOf("T")).Replace("-", "/")).ToString();
                                                                @Html.Raw(DateTime
                                                            .ParseExact(date, "yyyy/MM/dd", CultureInfo.InvariantCulture)
                                                            .ToString("dd/MM/yyyy", CultureInfo.InvariantCulture));
                                                            }
                                                            else
                                                            {
                                                                @Html.Raw(Messages.NotAvailable.ToString())
                                                            }
                                                        </strong>
                                                    </td>
                                                    <td class="text-black text-center"><strong>@item.UpdatedByName</strong></td>

                                                    <td class="text-black text-center">
                                                        <strong>
                                                            @if (item.Status == true)
                                                            {@Html.Raw("Active") }
                                                        else
                                                        { @Html.Raw("Inactive")}
                                                        </strong>
                                                    </td>
                                                    <td class="text-center text-nowrap">
                                                        <a href="javascript:void(0)" onclick="performAction('@CryptoEngineUtils.Encrypt(Convert.ToString(item.Id),true)',false)" data-id="@item.Id" class="mr-2"><i class="fas fa-edit text-danger"></i></a>
                                                        <a href="javascript:void(0)" onclick="deleteCommittee('@CryptoEngineUtils.Encrypt(Convert.ToString(item.Id),true)',false)" data-id="@item.Id" class="mr-2"><i class="fas fa-trash-alt text-danger"></i></a>
                                                        <a href="javascript:void(0)" onclick="performAction('@CryptoEngineUtils.Encrypt(Convert.ToString(item.Id),true)',true)" data-id="@item.Id"><i class="fas fa-clock text-danger"></i></a>
                                                        <a href="/Committee/HistoryIndex?id=@CryptoEngineUtils.Encrypt(Convert.ToString(item.Id),true)">&nbsp;<i class="fas fa-history text-danger"></i></a>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>

                                    </table>
                                </div>
                                <br />
                                <table class="float-right" id="paginator" cellpadding="0" cellspacing="0">
                                    <tr>
                                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                                        {
                                            <td>
                                                <div class="pagination">
                                                    @if (i != ViewBag.CurrentPageIndex)
                                                    {
                                                        <a href="javascript:PagerClick(@i);">@i</a>
                                                    }
                                                    else
                                                    {
                                                        <span>@i</span>
                                                    }
                                                </div>
                                            </td>
                                        }
                                    </tr>
                                </table>
                                <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    



<div class="modal" tabindex="-1" id="uploadFile">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 rounded-0">
            <span class="close-modal" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </span>
            <div class="modal-body">
                <label class="d-block file-upload mb-3">Upload File</label>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" onclick="this.value = null" class="custom-file-input" id="excelFile" data-ketan="" aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <a class="btn btn-danger btn-user btn-sm" id="btnUpload">Upload</a>
                        <a href="/Committee/Index" class="btn bg-white border btn-user btn-sm">Cancel</a>
                    </div>
                    <a href="/Files/DownloadFile?filePath=/Imports/Samples/Committee/Committee.xlsx" class="ml-3 mt-n2">Download Sample</a>
                    <label id="lblError" class="ml-n5 mt-5 adderror"></label>
                </div>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/Assets/Common")
@Html.Partial("_CommonDeleteModal")
@Scripts.Render("~/Assets/CommitteeMasters")
<script>
    var pageLength=@ViewBag.PageIndex;
    var page = @ViewBag.Page;
</script>
