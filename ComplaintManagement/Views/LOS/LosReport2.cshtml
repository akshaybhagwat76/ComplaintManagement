                                    Text = "Category of Complaint",
                                    Value = "categoryOfComplaint"
                                });
                                listItems.Add(new SelectListItem
                                {
                                    Text = "Case Type",
                                    Value = "CaseType"
                                });
                                listItems.Add(new SelectListItem
                                {
                                    Text = "LOS Wise",
                                    Value = "LOS"
                                });
                                listItems.Add(new SelectListItem
                                {
                                    Text = "SBU Wise",
                                    Value = "SBU"
                                });
                                listItems.Add(new SelectListItem
                                {
                                    Text = "Sub SBU Wise",
                                    Value = "SubSBU"
                                });

                            }
