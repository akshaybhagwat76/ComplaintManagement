                                {

                                    typevalues.AddRange(ViewBag.typevalues);

                                }
                            }
                            <div>

                                @Html.DropDownListFor(model => model.typevalues, (List<SelectListItem>)typevalues, new { @class = "form-control required" })

                            </div>
                        </li>
                        <li class="nav-item">
                            <button type="button" onclick="filterXOLReportGrid()" class="btn btn-danger rounded-circle h-40p w-40p"><i class="fas fa-search"></i></button>
                        </li>
                        <li class="nav-item mr-8">
