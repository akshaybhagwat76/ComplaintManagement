<link href="~/Content/plugins/dataTables/datatables.min.css" rel="stylesheet" />

<div class="table-responsive">
    <table class="table f-14" id="historyTable">
        @if (ViewBag.lstComplaintHistory != null)
        {
            if (ViewBag.lstComplaintHistory.Count > 0)
            {
                <thead>
                    <tr>
                        <td>Created By</td>
                        <td>Created On</td>
                        <td>Remarks</td>
                        <td>Type</td>
                        <td>Action</td>
                    </tr>
                </thead>
            }
        }
        <tbody>
            @if (ViewBag.lstComplaintHistory != null)
            {
                if (ViewBag.lstComplaintHistory.Count > 0)
                {
                    foreach (var item in ViewBag.lstComplaintHistory)
                    {
                        <tr>
                            <td class="text-black"><strong>@item.CreatedByName</strong></td>
                            <td class="text-black"><strong>@item.CreatedDate.ToString("dd/MM/yyyy")</strong></td>
                            <td class="text-black"><strong>@item.Remarks</strong></td>
                            <td class="text-black"><strong>@item.UserType</strong></td>
                            <td class="text-black"><strong>@item.ActionType</strong></td>
                        </tr>
                    }
                }
                else
                {
                    <label>No data found.</label>
                }
            }
            else
            {
                <label>No data found.</label>
            }
        </tbody>
    </table>
</div>
<script src="~/Scripts/vendor/datatables/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $("#historyTable").dataTable();
    })
</script>